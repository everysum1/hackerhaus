
<div class="container">
  <div class="row">

    <div class="list-main col-md-6">
      <% @properties.each do |p| %>
        <div class="listing">
          <div class="listing-pic">
            <img src="http://placehold.it/175x100" alt="neighborhood">
          </div>
          <div class="caption">
            <h3><%= p.title %> | <%= p.city_name %></h3>
            <p><%= p.description %></p>
          </div>
        </div>
      <% end %>
    </div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>City</th>
      <th>Price</th>
    </tr>
  </thead>
  <tbody>
    <% @properties.each do |p| %>
    <tr>
      <td>
        <%= p.title %>
      </td>
      <td>
        <%= p.description %>
      </td>
      <td>
        <%= p.city_name %>
      </td>
      <td>
        <%= p.price %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
  
